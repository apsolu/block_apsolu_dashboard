{{!
    @template block_apsolu_dashboard/shnu

    Template Moodle pour afficher le formulaire d'extraction SHNU.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * count_users
    * found_users
    * action
    * mastercheckbox
    * users
      * id
      * checkbox
      * htmlpicture
      * lastname
      * firstname
      * idnumber
      * institution
      * department
      * customfields
        * apsolucardpaid
        * apsolucycle
        * apsolusex
        * apsoluufr
      * course
      * enrol
      * rolename
      * list

    Example context (json):
    {
        "action": "",
        "mastercheckbox": "",
        "count_users": 0,
        "found_users": 0,
        "users": []
    }
}}

{{^users}}
    <p class="alert alert-info">{{#str}}no_student, local_apsolu{{/str}}</p>
{{/users}}

{{#count_users}}
<p class="alert alert-info">{{found_users}}</p>

<form action="{{action}}" method="post">
    <table class="table table-striped table-sortable">
    <thead>
        <tr>
            <th>{{{ mastercheckbox }}}</th>
            <th>{{#str}}pictureofuser{{/str}}</th>
            <th>{{#str}}lastname{{/str}}</th>
            <th>{{#str}}firstname{{/str}}</th>
            <th>{{#str}}idnumber{{/str}}</th>
            <th>{{#str}}fields_apsolusex,local_apsolu{{/str}}</th>
            <th>{{#str}}institution{{/str}}</th>
            <th>{{#str}}department{{/str}}</th>
            <th>{{#str}}fields_apsoluufr,local_apsolu{{/str}}</th>
            <th>{{#str}}fields_apsolucycle,local_apsolu{{/str}}</th>
        </tr>
    </thead>
    <tbody>
        {{#users}}
        <tr>
            <td>{{{ checkbox }}}</td>
            <td>{{{htmlpicture}}}</td>
            <td>{{lastname}}</td>
            <td>{{firstname}}</td>
            <td>{{idnumber}}</td>
            <td>{{customfields.apsolusex}}</td>
            <td>{{institution}}</td>
            <td>{{department}}</td>
            <td>{{customfields.apsoluufr}}</td>
            <td>{{customfields.apsolucycle}}</td>
        </tr>
        {{/users}}
    </tbody>
    </table>

    <p><input type="submit" class="btn btn-primary" name="notify" value="{{#str}}notify, local_apsolu{{/str}}" /></p>
</form>
{{/count_users}}
