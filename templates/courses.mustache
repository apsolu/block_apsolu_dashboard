<div id="courses" class="tab-pane fade in">
  {{! Bouton d'inscription aux cours. }}
  <p class="well"><a class="btn btn-success" href="{{wwwroot}}/enrol/select/overview.php">{{#str}}courses_signup, block_apsolu_dashboard{{/str}}</a></p>

  {{! Liste des cours de l'utilisateur. }}
  {{^count_courses}}
  <p class="alert alert-info">{{#str}}no_courses, block_apsolu_dashboard{{/str}}</p>
  {{/count_courses}}

  {{#count_courses}}
  <ul class="list-unstyled">
    {{#courses}}
    <li class="well">
      <p><a href="{{wwwroot}}/course/view.php?id={{id}}">{{fullname}}</a></p>
      {{#count_enrolments}}
      <ul>
        {{#enrolments}}
        <li>{{.}}</li>
        {{/enrolments}}
      </ul>
      {{/count_enrolments}}
    </li>
    {{/courses}}
  </ul>
  {{/count_courses}}
</div>
